@model EinvoiceIntegration.Models.B2C.GetIssueListModel
@{
    ViewBag.Title = "綠界科技";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $('#reset').click(function () {
            location.href='@Url.Action("Index")';
        });
    });
</script>
@using (Html.BeginForm("Index", "B2CInvoiceGetIssueList", FormMethod.Post))
{
    <h2>查詢開立</h2>
    <div class="div1">
        <table class="table">
            <tr>
                <th>
                    廠商編號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.MerchantID)
                </td>
            </tr>
            <tr>
                <th>
                    查詢發票開立開始日期(必填) yyyy-MM-dd：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.BeginDate)
                </td>
            </tr>
            <tr>
                <th>
                    查詢發票開立結束日期(必填) yyyy-MM-dd：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.EndDate)
                </td>
            </tr>
            <tr>
                <th>
                    單頁顯示筆數：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.NumPerPage)
                </td>
            </tr>
            <tr>
                <th>
                    顯示的頁面：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.ShowingPage)
                </td>
            </tr>
            <tr>
                <th>
                    回傳資料類型(選填) 1：Json(預設) 2：CSV：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.DataType)
                </td>
            </tr>
            <tr>
                <th>
                    中獎(選填) 0：全部(預設) 1：是 2：否：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Query_Award)
                </td>
            </tr>
            <tr>
                <th>
                    作廢(選填) 0：全部(預設) 1：是 2：否：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Query_Invalid)
                </td>
            </tr>
            <tr>
                <th>
                    索取紙本(選填) 0：全部(預設) 1：要 2：不要 3：已處理：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Query_Print)
                </td>
            </tr>
            <tr>
                <th>
                    上傳狀態(選填) 0：全部(預設) 1：已上傳 2：未上傳 3：上傳失效：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Query_Upload)
                </td>
            </tr>
            <tr>
                <th>
                    發票開立統編(選填) 0：全部(預設) 1：是 2：否：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Query_Identifier)
                </td>
            </tr>
            <tr>
                <th>
                    課稅別(選填) 0：全部(預設) 1：應稅 2：零稅率 3：免稅 4：應稅(特種) 9：混合稅率：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Query_TaxType)
                </td>
            </tr>
            <tr>
                <th>
                    發票類別(選填) 0：全部(預設) 1：B2C 2：POS 3：離線：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Query_Category)
                </td>
            </tr>
            <tr>
                <th>
                    買受人姓名(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Query_Customer_Name)
                </td>
            </tr>
            <tr>
                <th>
                    買受人手機號碼(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Query_Customer_Phone)
                </td>
            </tr>
        </table>
    </div>

    <div class="buttonPanel">
        <button type="submit">送出</button>
        <button type="button" id="reset">重新填寫</button>
    </div>
    <h2>顯示結果</h2>
    <span id="answer" class="div1" style="word-wrap:break-word;">@ViewBag.message</span>
}
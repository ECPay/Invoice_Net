@using EinvoiceIntegration.Enum
@model EinvoiceIntegration.Models.B2B.GetInvoiceWordSettingModel
@{
    ViewBag.Title = "綠界科技";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $('#reset').click(function () {
            location.href='@Url.Action("Index")';
        });
    });
</script>
@using (Html.BeginForm("Index", "B2BInvoiceGetInvoiceWordSetting", FormMethod.Post))
{
    <h2>查詢字軌</h2>
    <div class="div1">
        <table class="table">
            <tr>
                <th>
                    廠商編號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.MerchantID)
                </td>
            </tr>
            <tr>
                <th>
                    發票期別(必填)：<br/>
                    0:全部, 1: 1-2月 ,2: 3-4月 ,3: 5-6月, <br />
                    4: 7-8月 ,5: 9-10月 ,6: 11-12月<br />
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceTerm)
                </td>
            </tr>
            <tr>
                <th>
                    發票年度(必填)：<br />
                    格式為民國年 ex:109
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceYear)
                </td>
            </tr>
            <tr>
                <th>
                    字軌使用狀態(必填)：<br />
                    0:全部, 1:未啟用, 2:使用中,3:已停用,<br />
                    4:暫停中,5:待審核,6:審核不通過<br />
                </th>
                <td>
                    @Html.TextBoxFor(m => m.UseStatus)
                </td>
            </tr>
            <tr>
                <th>
                    發票類別(必填)：<br />
                    0:全部, 1:B2C, 2:B2B, 3:POS, 4:Offlines
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceCategory)
                </td>
            </tr>
            <tr>
                <th>
                    字軌類別：<br />
                    07:一般稅額發票, 08:特種稅額發票
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvType)
                </td>
            </tr>
            <tr>
                <th>
                    字軌名稱：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceHeader)
                </td>
            </tr>            
        </table>
    </div>

    <div class="buttonPanel">
        <button type="submit">送出</button>
        <button type="button" id="reset">重新填寫</button>
    </div>
    <h2>顯示結果</h2>
    <span id="answer" class="div1" style="word-wrap:break-word;">@ViewBag.message</span>
}
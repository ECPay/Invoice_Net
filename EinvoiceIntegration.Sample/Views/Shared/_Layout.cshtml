                <ul id="menu">
                    <li>@Html.ActionLink("查詢折讓作廢確認", "Index", "B2BInvoiceGetAllowanceInvalidConfirm")</li>
                    <li>@Html.ActionLink("查詢作廢確認", "Index", "B2BInvoiceGetInvalidConfirm")</li>
                    <li>@Html.ActionLink("查詢開立確認", "Index", "B2BInvoiceGetIssueConfirm")</li>
                    <li>@Html.ActionLink("查詢退回確認", "Index", "B2BInvoiceGetRejectConfirm")</li>
                    <li>@Html.ActionLink("查詢字軌", "Index", "B2BInvoiceGetInvoiceWordSetting")</li>
                </ul>
            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>

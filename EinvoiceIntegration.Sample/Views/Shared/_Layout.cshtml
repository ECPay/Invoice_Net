<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>

</head>

<body>
    <div class="page">

        <div id="header">

            <div id="menucontainer">
                <h2>B2C</h2>
                <ul id="menu">
                    <li>@Html.ActionLink("一般開立", "Index", "B2CInvoiceIssue")</li>
                    <li>@Html.ActionLink("延遲或觸發開立發票", "Index", "B2CInvoiceDelayIssue")</li>
                    <li>@Html.ActionLink("開立折讓(紙本)", "Index", "B2CInvoiceAllowance")</li>
                    <li>@Html.ActionLink("開立折讓(線上)", "Index", "B2CInvoiceAllowanceByCollegiate")</li>
                    <li>@Html.ActionLink("發票作廢", "Index", "B2CInvoiceInvalid")</li>
                    <li>@Html.ActionLink("折讓作廢", "Index", "B2CInvoiceAllowanceInvalid")</li>
                    <li>@Html.ActionLink("查詢發票", "Index", "B2CInvoiceGetIssue")</li>
                    <li>@Html.ActionLink("查詢作廢", "Index", "B2CInvoiceGetInvalid")</li>
                    <li>@Html.ActionLink("查詢折讓明細(紙本)", "Index", "B2CInvoiceGetAllowance")</li>

                    <li>@Html.ActionLink("查詢字軌", "Index", "B2CInvoiceGetInvoiceWordSetting")</li>
                </ul>
            </div>

            <div id="menucontainer">
                <h2>B2B</h2>
                <ul id="menu">
                    <li>@Html.ActionLink("一般開立", "Index", "B2BInvoiceIssue")</li>
                    <li>@Html.ActionLink("開立折讓", "Index", "B2BInvoiceAllowance")</li>
                    <li>@Html.ActionLink("發票作廢", "Index", "B2BInvoiceInvalid")</li>
                    <li>@Html.ActionLink("折讓作廢", "Index", "B2BInvoiceCancelAllowance")</li>
                    <li>@Html.ActionLink("退回", "Index", "B2BInvoiceReject")</li>
                    <li>@Html.ActionLink("查詢發票", "Index", "B2BInvoiceGetIssue")</li>
                    <li>@Html.ActionLink("查詢作廢", "Index", "B2BInvoiceGetInvalid")</li>
                    <li>@Html.ActionLink("查詢折讓明細", "Index", "B2BInvoiceGetAllowance")</li>
                    <li>@Html.ActionLink("查詢折讓作廢明細", "Index", "B2BInvoiceGetAllowanceInvalid")</li>
                    <li>@Html.ActionLink("查詢退回", "Index", "B2BInvoiceGetReject")</li>
                    <li>@Html.ActionLink("發送通知", "Index", "B2BInvoiceNotify")</li>
                    <li>@Html.ActionLink("折讓-接收確認", "Index", "B2BInvoiceAllowanceConfirm")</li>
                    <li>@Html.ActionLink("折讓作廢-接收確認", "Index", "B2BInvoiceCancelAllowanceConfirm")</li>
                    <li>@Html.ActionLink("退回-接收確認", "Index", "B2BInvoiceRejectConfirm")</li>
                    <li>@Html.ActionLink("查詢折讓確認", "Index", "B2BInvoiceGetAllowanceConfirm")</li>

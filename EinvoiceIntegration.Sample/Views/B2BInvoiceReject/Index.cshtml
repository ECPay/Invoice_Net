@using EinvoiceIntegration.Enum
@model EinvoiceIntegration.Models.B2B.RejectModel
@{
    ViewBag.Title = "綠界科技";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $('#reset').click(function () {
            location.href='@Url.Action("Index")';
        });
    });
</script>
@using (Html.BeginForm("Index", "B2BInvoiceReject", FormMethod.Post))
{
    <h2>退回</h2>
    <div class="div1">
        <table class="table">
            <tr>
                <th>
                    廠商編號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.MerchantID)
                </td>
            </tr>
            <tr>
                <th>
                    發票號碼(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceNumber, new { @Value = "MJ20002503" })
                </td>
            </tr>
            <tr>
                <th>
                    發票開立日期(必填) yyyy/MM/dd：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceDate, new { @Value = "2021-08-09", @placeholder = "yyyy/MM/dd" })
                </td>
            </tr>
            <tr>
                <th>
                    退回原因(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Reason, new { @Value = "測試退回" })
                </td>
            </tr>
            <tr>
                <th>
                    備註(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Remark)
                </td>
            </tr>
        </table>
    </div>

    <div class="buttonPanel">
        <button type="submit">送出</button>
        <button type="button" id="reset">重新填寫</button>
    </div>
    <h2>顯示結果</h2>
    <span id="answer" class="div1" style="word-wrap:break-word;">@ViewBag.message</span>
}
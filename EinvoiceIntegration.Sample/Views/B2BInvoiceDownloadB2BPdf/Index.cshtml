@model EinvoiceIntegration.Models.B2B.DownloadB2BPdfModel
@{
    ViewBag.Title = "綠界科技";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $('#reset').click(function () {
            location.href='@Url.Action("Index")';
        });
    });
</script>
@using (Html.BeginForm("Index", "B2BInvoiceDownloadB2BPdf", FormMethod.Post))
{
    <h2>發票下載PDF檔</h2>
    <div class="div1">
        <table class="table" style="word-wrap:break-word;">
            <tr>
                <th>
                    廠商編號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.MerchantID)
                </td>
            </tr>
            <tr>
                <th>
                    發票種類(選填) 0: 銷項發票(預設) 1: 進項發票：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceCategory)
                </td>
            </tr>
            <tr>
                <th>
                    發票號碼(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceNo)
                </td>
            </tr>
            <tr>
                <th>
                    發票日期(必填) yyyy/MM/dd：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceDate, new { @placeholder = "yyyy/MM/dd" })
                </td>
            </tr>
            <tr>
                <th>
                    發票列印格式 1:A4(預設) 2:A5：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.PrintStyle)
                </td>
            </tr>
            <tr>
                <th>
                    存檔根目錄
                </th>
                <td>
                    <input id="rootDictionary" name="rootDictionary" value=""/>
                </td>
            </tr>
        </table>
    </div>

    <div class="buttonPanel">
        <button type="submit">送出</button>
        <button type="button" id="reset">重新填寫</button>
    </div>
    <h2>顯示結果</h2>
    <span id="answer" class="div1" style="word-wrap:break-word;">@ViewBag.message</span>
}
@using EinvoiceIntegration.Enum
@model EinvoiceIntegration.Sample.Models.B2C.InvoiceTriggerIssue
@{
    /**/

    ViewBag.Title = "綠界科技";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>發票觸發開立</h2>
@using (Html.BeginForm("Index", "B2CInvoiceTriggerIssue", FormMethod.Post))
{
    <div class="div1">
        <table class="table">
            <tr>
                <th>
                    廠商編號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.MerchantID, new { @Value = "2000132" })
                </td>
            </tr>
            <tr>
                <th>
                    交易類別(必填)：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.PayType, new SelectList(Enum.GetValues(typeof(PayTypeEnum))))
                </td>
            </tr>
            <tr>
                <th>
                    交易單號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Tsr, new { @Value = "Test0000" })
                </td>
            </tr>
        </table>
    </div>

    <div class="buttonPanel">
        <button type="submit">送出</button>
        <button type="reset">重新填寫</button>
    </div>

    <h2>顯示結果</h2>
    <span id="answer" class="div1">@ViewBag.message</span>
}
